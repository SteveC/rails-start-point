<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 text-center">
      <h1 class="mb-4">Welcome to Rails App</h1>
      <% if current_user %>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Hello, <%= current_user.name %></h5>
            <p class="card-text">You are signed in with <%= current_user.email %></p>
            <%= link_to 'Sign Out', signout_path, class: 'btn btn-danger' %>
          </div>
        </div>
      <% else %>
        <%= link_to 'Sign in with Google', '/auth/google_oauth2', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
